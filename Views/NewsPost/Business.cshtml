

<h2>@Model.currCategory</h2>

<div class="row mt-5 mb-2">
    @{
        foreach (var post in Model.allNewsPost)
        {
            <div class="col-lg-4">
                <img class="img-thumbnail" src="@post.photo" alt="@post.title"/>
                <h2>@post.title</h2>
                <p>@post.time</p>
                <p><a class="btn btn-warning" href="@post.url">More...</a></p>
            </div>
        }
    }
</div>
   
 
